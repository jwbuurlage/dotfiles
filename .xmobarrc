Config { font ="xft:DejaVu Sans:size=8:antialias=true"
       , bgColor = "black"
       , fgColor = "white"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run StdinReader
                    , Run Cpu ["-t", "cpu: <total>%"] 10
                    , Run Memory ["-t","mem: <usedratio>%"] 10
                    , Run Date "%d-%m-%Y  %H:%M" "date" 10
                    , Run Battery ["-f", "BAT0/uevent", "-t", "<left>%  <timeleft>", "--", "-c", "energy_full"] 600 
                    , Run DiskU [("/", "<used>/<size>")] [] 20
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ bat: %battery%  <fc=#44ff44>disk: %disku%</fc>   <fc=#ff4444>%cpu%</fc>    <fc=#4444ff>%memory%</fc>    <fc=#eeeeee>%date%</fc>"
       }

